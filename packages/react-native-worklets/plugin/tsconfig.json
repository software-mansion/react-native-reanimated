{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "types",
    "declaration": true,
    "noEmit": false
  },
  "include": ["src"]
}
