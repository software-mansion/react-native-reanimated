{
  "compilerOptions": {
    // for taro-reanimated-tests.tsx
    "paths": {
      "taro-reanimated": ["./taro-reanimated.d.ts"]
    },
    // change to true after we transition to TS
    "declaration": false,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "es6",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "taro-reanimated.d.ts",
    "taro-reanimated-tests.tsx"
  ]
}
