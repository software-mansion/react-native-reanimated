{
  "compilerOptions": {
    // for react-native-reanimated-tests.tsx
    "paths": {
      "react-native-reanimated": ["./react-native-reanimated.d.ts"]
    },
    // change to true after we transition to TS
    "declaration": false,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "ESNext",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx", "react-native-reanimated.d.ts", "react-native-reanimated-tests.tsx"]
}
