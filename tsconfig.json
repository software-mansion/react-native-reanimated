{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "preserveSymlinks": true,
    "target": "es6",
    "module": "NodeNext",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "lib": ["es6", "dom", "ES2021"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    // We set "noEmit" to `true` only in packages which emit files.
    "noEmit": true,
  },
}
