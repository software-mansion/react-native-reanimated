{
  "devDependencies": {
    "eslint": "^8.35.0",
    "prettier": "^2.5.1",
    "typescript": "^4.1.3",
    "esbuild": "^0.17.11"
  },
  "license": "MIT",
  "readmeFilename": "README.md",
  "scripts": {
    "prepare": "yarn generate",
    "generate": "yarn tsc && yarn bundle",
    "clean": "rm src/*.js src/*.js.map",
    "bundle": "yarn esbuild src/plugin.js --bundle --external:@babel --external:convert-source-map --external:fs --log-level=warning --platform=node --sourcemap=linked --outfile=build/plugin.js && yarn clean",
    "format": "yarn prettier --write --list-different **/*.ts",
    "lint": "yarn eslint --max-warnings=0 --ext .ts . && yarn prettier --check **/*.ts",
    "type:check": "yarn tsc --noEmit"
  }
}
