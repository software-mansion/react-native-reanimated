{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src/**/*"]
}
