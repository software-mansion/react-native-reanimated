{
  "name": "react-native-reanimated-monorepo",
  "version": "0.0.0",
  "packageManager": "yarn@4.1.1",
  "workspaces": {
    "packages": [
      "packages/react-native-reanimated",
      "packages/eslint-plugin-reanimated",
      "packages/react-native-worklets/plugin",
      "packages/react-native-worklets",
      "apps/common-app",
      "apps/fabric-example",
      "apps/macos-example",
      "apps/tvos-example",
      "apps/web-example",
      "apps/next-example"
    ]
  },
  "private": true,
  "scripts": {
    "build": "husky && yarn workspaces foreach --all --parallel --topological-dev run build",
    "format": "yarn format:root && yarn format:workspaces",
    "format:root": "prettier --write --list-different .",
    "format:workspaces": "yarn workspaces foreach --all --exclude \"react-native-reanimated-monorepo\" --parallel --topological-dev run format",
    "lint": "yarn lint:root && yarn lint:workspaces",
    "lint:workspaces": "yarn workspaces foreach --all --exclude \"react-native-reanimated-monorepo\" --parallel --topological-dev run lint",
    "lint:root": "eslint . && yarn prettier --check ."
  },
  "devDependencies": {
    "@types/shelljs": "^0.8.15",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "typescript": "~5.3.0"
  },
  "resolutions": {
    "@react-native/community-cli-plugin@npm:0.79.1": "patch:@react-native/community-cli-plugin@npm%3A0.79.1#~/.yarn/patches/@react-native-community-cli-plugin-npm-0.79.1-7bacb8c651.patch",
    "react-native-drawer-layout@npm:^4.1.1": "patch:react-native-drawer-layout@npm%3A4.1.1#~/.yarn/patches/react-native-drawer-layout-npm-4.1.1-64fe7f514a.patch"
  }
}
