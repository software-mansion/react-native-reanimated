{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleSuffixes": [".web", ""]
  },
  "include": ["src", "index.ts"],
  "exclude": [
    "src/**/*.native.ts",
    "src/**/*.native.tsx",
    "src/**/*.ios.ts",
    "src/**/*.ios.tsx",
    "src/**/*.android.ts",
    "src/**/*.android.tsx"
  ]
}
