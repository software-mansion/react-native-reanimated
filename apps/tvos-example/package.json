{
  "name": "tvos-example",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "cd ios && bundle install && bundle exec pod update",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write --list-different .",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-native": "npm:react-native-tvos@0.79.1-0",
    "react-native-reanimated": "workspace:*",
    "react-native-worklets": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.26.10",
    "@react-native/babel-preset": "0.79.1",
    "@react-native/eslint-config": "0.79.1",
    "@react-native/metro-config": "0.79.1",
    "@react-native/typescript-config": "0.79.1",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^9.29.0",
    "jest": "^29.6.3",
    "prettier": "^3.3.3",
    "react-test-renderer": "19.0.0",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20.13.0"
  },
  "installConfig": {
    "hoistingLimits": "workspaces",
    "selfReferences": false
  },
  "reanimated": {
    "staticFeatureFlags": {
      "RUNTIME_TEST_FLAG": true,
      "DISABLE_COMMIT_PAUSING_MECHANISM": true,
      "ANDROID_SYNCHRONOUSLY_UPDATE_UI_PROPS": true,
      "UNSTABLE_CSS_ANIMATIONS_FOR_SVG_COMPONENTS": true,
      "USE_SYNCHRONIZABLE_FOR_MUTABLES": true
    }
  },
  "worklets": {
    "staticFeatureFlags": {
      "RUNTIME_TEST_FLAG": true,
      "IOS_DYNAMIC_FRAMERATE_ENABLED": true
    }
  }
}
